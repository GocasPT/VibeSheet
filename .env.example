# ============================================
# VibeSheet - Configuração de Ambiente
# ============================================

# ============ Spotify OAuth ============
# Criar app em: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/spotify/callback

# ============ Google Sheets ============
# Service Account JSON deve estar em: auth/google_service_account.json
GOOGLE_SHEET_ID=your_google_sheet_id
GOOGLE_SHEET_WORKSHEET_TITLE=Sheet1
GOOGLE_SERVICE_ACCOUNT=auth/google_service_account.json

# ============ Sync Configuration ============
# Intervalo entre sincronizações (em segundos)
# Recomendado: 30-60s (evita rate limits do Spotify)
SYNC_INTERVAL_SEC=30